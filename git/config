# vim:ft=toml
[commit]
	template = ~/.config/git/gitmessage.txt
[gpg]
	program = gpg
[alias]
	st = status
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue) <%an>%Creset' --abbrev-commit
	last = log -1 HEAD

	conn = remote add origin
	update = !git pull && git push -u origin HEAD
	publish = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
	u = update

	a = add
	ap = add --patch
	aa = add -A
	cm = commit
	cms = commit -S
	cma = commit --amend
	cmas = commit --amend -S

	co = checkout
	cob = checkout -b
	com = checkout $(git config init.defaultbranch)
	cod = checkout develop
	del = branch -D

	save = !git add -A && git commit -m 'SAVE'
	undo = reset HEAD~1 --mixed
	wipe = !git add -A && git commit -m 'WIPE' && git reset HEAD~1 --hard

	s = stash
	sp = stash pop
	su = stash -u
	sl = stash list
	sll = stash-list
	slll = stash-list --full
	ss = stash save
[init]
	defaultBranch = main
[include]
	path = ./personal.gitconfig
